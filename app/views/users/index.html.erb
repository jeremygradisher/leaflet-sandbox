<table class="table table-striped">
  <thead>
    <tr>
      <th>ID:</th>
      <th>Users:</th>
      <th>Last Signed in at:</th>
      
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.email %></td>
        
        <td><%= user.last_sign_in_at %></td>
        
        <td>
          <%= link_to t('.view', :default => t("helpers.links.view")),
                      user_path(user), :class => 'btn btn-default btn-xs' %>
            
          <%#= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      user_path(user),
                      :method => 'delete',
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-danger btn-xs' %> 
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%#= link_to users_path %>

<div class="col-lg-12" style="text-align:left;">
  <hr>
      <%= link_to t('.back', :default => "<= Back to Home"),
              root_path, :class => 'btn btn-primary'  %>
    <%#= link_to '<i class="fa fa-chevron-left"></i>'.html_safe,
                  projects_path, :class => 'btn btn-default',
                  :title => 'Back Home' %>
    <%#= link_to '<i class="fa fa-edit"></i>'.html_safe,
                  edit_project_path(@project), :class => 'btn btn-primary', 
                  :title => 'Edit Project'  %>
    <%#= link_to '<i class="fa fa-remove"></i>'.html_safe,
                  project_path(@project),
                  :method => 'delete',
                  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                  :class => 'btn btn-danger', :title => 'Delete Project' %>
  <hr>
</div>